input.overall-search(type="search", placeholder="Filter...", value="{{searchTerm}}")

div.overall-listing
    | {{#each showcaseCollection}}
    | {{#(!searchTerm || this.hasString(searchTerm.trim().toLowerCase()))}}
    div(class="ingredient{{ inInventory ? ' marked' : ''}}", data-idx="{{@index}}")
        h6.ingredient-title {{name}}
        ul.ingredient-list
            | {{#each effects}}
            li {{.}}
            | {{/each}}
    | {{/}}
    | {{/each}}