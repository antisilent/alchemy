{
  "name": "tes-alchemy",
  "version": "0.0.1",
  "description": "TES alchemy engine",
  "main": "alchemy.js",
  "scripts": {
    "start": "grunt",
    "test": "npm run lint && npm run mocha",
    "jscs": "jscs .",
    "eslint": "eslint .",
    "lint": "npm run jscs",
    "mocha": "mocha --compilers js:./node_modules/babel/register -u bdd -R spec --recursive test",
    "babel": "babel src -w -s --out-dir lib --modules umd",
    "prepublish": "babel src -s --out-dir lib --modules umd"
  },
  "keywords": [
    "alchemy",
    "tes"
  ],
  "author": "Konstantin Kitmanov <doctor.hogart@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel": "^4.6.6",
    "chai": "^2.1.1",
    "eslint": "^0.16.1",
    "jscs": "^1.11.3",
    "mocha": "^2.1.0",
    "normalize-css": "^2.3.1",
    "stylus": "^0.50.0"
  },
  "jscsConfig": {
    "esnext": true,
    "requireSpaceAfterKeywords": [
      "if",
      "for",
      "while",
      "do",
      "switch",
      "try",
      "catch"
    ],
    "disallowKeywordsOnNewLine": [
      "else"
    ],
    "disallowSpaceBeforePostfixUnaryOperators": true,
    "disallowMultipleLineStrings": true,
    "requireSpaceBeforeBinaryOperators": true,
    "requireSpaceAfterBinaryOperators": true,
    "disallowSpaceAfterPrefixUnaryOperators": true,
    "excludeFiles": [
      "node_modules",
      "tools",
      "coverage"
    ]
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true
    },
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "strict": [
        2,
        "global"
      ],
      "no-extra-strict": false,
      "global-strict": false,
      "eol-last": [
        0
      ]
    }
  }
}
